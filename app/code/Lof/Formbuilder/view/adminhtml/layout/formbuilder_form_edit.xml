<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
        <css src="Lof_Formbuilder::css/vendor.css"/>
        <css src="Lof_Formbuilder::css/formbuilder.css"/>
        <css src="Lof_Formbuilder::css/bootstrap.tiny.min.css"/>
        <css src="Lof_Formbuilder::css/style.css"/>
    </head>
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Lof\Formbuilder\Block\Adminhtml\Form\Edit" name="formbuilder_form_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Lof\Formbuilder\Block\Adminhtml\Form\Edit\Tabs" name="lof_formbuilder_edit_tabs">
                <block class="Lof\Formbuilder\Block\Adminhtml\Form\Edit\Tab\Main" name="lof_formbuilder_edit_tab_main"/>
                <block class="Lof\Formbuilder\Block\Adminhtml\Form\Edit\Tab\Content"
                       name="lof_formbuilder_edit_tab_content"/>
                <block class="Lof\Formbuilder\Block\Adminhtml\Form\Edit\Tab\Creator"
                       name="lof_formbuilder_edit_tab_creator"/>
                <block class="Lof\Formbuilder\Block\Adminhtml\Form\Edit\Tab\Meta" name="lof_formbuilder_edit_tab_meta"/>
                <block class="Lof\Formbuilder\Block\Adminhtml\Form\Edit\Tab\Design"
                       name="lof_formbuilder_edit_tab_design"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">lof_formbuilder_edit_tab_main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">content_section</argument>
                    <argument name="block" xsi:type="string">lof_formbuilder_edit_tab_content</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">creator_section</argument>
                    <argument name="block" xsi:type="string">lof_formbuilder_edit_tab_creator</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">meta_section</argument>
                    <argument name="block" xsi:type="string">lof_formbuilder_edit_tab_meta</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">design_section</argument>
                    <argument name="block" xsi:type="string">lof_formbuilder_edit_tab_design</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
